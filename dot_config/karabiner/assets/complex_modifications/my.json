{
  "title": "My customizations",
  "rules": [
    {
      "description": "(Right) ⌘  + ⌥  + [F1 - F4] (Brightness / Volume)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f1",
            "modifiers": {
              "mandatory": [
                "right_option",
                "right_command"
              ]
            }
          },
          "to": {
            "key_code": "display_brightness_decrement"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f2",
            "modifiers": {
              "mandatory": [
                "right_option",
                "right_command"
              ]
            }
          },
          "to": {
            "key_code": "display_brightness_increment"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f3",
            "modifiers": {
              "mandatory": [
                "right_option",
                "right_command"
              ]
            }
          },
          "to": {
            "key_code": "volume_decrement"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f4",
            "modifiers": {
              "mandatory": [
                "right_option",
                "right_command"
              ]
            }
          },
          "to": {
            "key_code": "volume_increment"
          }
        }
      ]
    },
    {
      "description": "LShift -> F19 (pressed alone)",
      "manipulators": [
        {
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f19"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Caps_Lock -> F19 (pressed alone) | Hyper (as modifier)",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": [
                "left_option",
                "left_command"
              ],
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f19"
            }
          ],
          "type": "basic"
        }
      ]
    },
